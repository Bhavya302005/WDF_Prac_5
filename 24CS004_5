<body>
  <header>Events & Student Profiles Portal</header>

  <div class="container">
    <!-- Events Section -->
    <section>
      <h2>üìÖ Upcoming Events</h2>
      <div id="eventsList"></div>
    </section>

    <!-- Student Profiles Section -->
    <section>
      <h2>üéì Student Profiles</h2>
      <div id="studentList"></div>
      <div class="pagination" id="pagination"></div>
    </section>
  </div>

  <footer>¬© 2025 JSON Parsing | JavaScript Data Handling Lab</footer>

  <script>
    // ====== JSON DATASET ======
    const jsonData = `{
      "events": [
        {"title": "Hackathon 2025", "date": "2025-10-15", "venue": "Innovation Lab"},
        {"title": "Tech Symposium", "date": "2025-11-03", "venue": "CSPIT Auditorium"},
        {"title": "Career Fair", "date": "2025-12-01", "venue": "Main Foyer"}
      ],
      "students": [
        {"name": "Amin Bhavya", "course": "B.Tech CSE", "year": "3rd Year", "email": "amin@college.edu"},
        {"name": "Urja Gajera", "course": "B.Tech IT", "year": "2nd Year", "email": "urja@college.edu"},
        {"name": "Akshat Patel", "course": "B.Tech CE", "year": "3rd Year", "email": "akshat@college.edu"},
        {"name": "Manu Varsani", "course": "B.Tech CSE", "year": "4th Year", "email": "manu@college.edu"},
        {"name": "Priyank Bhavsar", "course": "B.Tech CE", "year": "4th Year", "email": "priyank@college.edu"},
        {"name": "Suhail Ahmed", "course": "B.Tech IT", "year": "3rd Year", "email": "suhail@college.edu"},
        {"name": "Kumar Varsani", "course": "B.Tech AI", "year": "3rd Year", "email": "kumar@college.edu"}
      ]
    }`;

    // ====== PARSING JSON ======
    const data = JSON.parse(jsonData);
    const events = data.events;
    const students = data.students;

    // ====== DISPLAY EVENTS ======
    function displayEvents() {
      const eventContainer = document.getElementById("eventsList");
      eventContainer.innerHTML = "";
      events.forEach(ev => {
        const card = document.createElement("div");
        card.classList.add("card");
        card.innerHTML = `
          <div class="title">${ev.title}</div>
          <div class="sub">üìÖ ${ev.date}</div>
          <div class="sub">üìç ${ev.venue}</div>
        `;
        eventContainer.appendChild(card);
      });
    }

    // ====== PAGINATION LOGIC ======
    let currentPage = 1;
    const perPage = 3;

    function displayStudents(page = 1) {
      const studentContainer = document.getElementById("studentList");
      studentContainer.innerHTML = "";

      const start = (page - 1) * perPage;
      const end = start + perPage;
      const pageStudents = students.slice(start, end);

      pageStudents.forEach(st => {
        const card = document.createElement("div");
        card.classList.add("card");
        card.innerHTML = `
          <div class="title">${st.name}</div>
          <div class="sub">${st.course} | ${st.year}</div>
          <div class="sub">‚úâÔ∏è ${st.email}</div>
        `;
        studentContainer.appendChild(card);
      });

      updatePagination(page);
    }

    // ====== PAGINATION BUTTONS ======
    function updatePagination(page) {
      const totalPages = Math.ceil(students.length / perPage);
      const pagination = document.getElementById("pagination");
      pagination.innerHTML = "";

      for (let i = 1; i <= totalPages; i++) {
        const btn = document.createElement("button");
        btn.textContent = i;
        if (i === page) btn.classList.add("active");
        btn.addEventListener("click", () => displayStudents(i));
        pagination.appendChild(btn);
      }
    }

    // ====== MODULAR INIT ======
    function initDisplay() {
      displayEvents();
      displayStudents(currentPage);
      console.log("‚úÖ JSON Parsed Successfully:", data);
    }

    initDisplay();
  </script>
